<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/css/default.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/css/jquery-ui-1.9.0.custom.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/scripts.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-1.8.2.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/menubar.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.9.0.custom.js")" type="text/javascript"></script>
    </head>

    <body>
        <div id="wrapper">
            <header id="header"></header>
            <nav id="main-nav" class="clearfix">
                <div class="center_width">
                    @{ Html.RenderAction("MainNavBar", "NavBar"); }
                </div>
            </nav>
            <div id="content-box" class="clearfix">
                <div class="center_width">
                    <div id="content">
                        <div id="main-content">
                            @RenderBody()
                        </div>
                    </div>
                    <div id="sidebar">
                        @{Html.RenderPartial("_ArticleWidget");}
                    </div>
                </div> 
            </div>
            <footer id="footer">
                <div class="copyright">Copyright ©2012 Wei Shuai</div>
            </footer>
        </div>
    </body>
</html>
