@using WEI.Web.Models
@model ArticleViewModel

<div class="article-wrapper">
    <h1>
        <span>@Model.Title</span>
    </h1>
    <div class="article-image">
      <img class="article-main-image" src="@Model.ImageUrl" alt="@Model.Title"/>  
    </div>
    <div class="article_byline">
        <span class="article-date">Published: @Model.PublishDate</span>
    </div>
    <div id="article-content">
        <div class="article-body">
            <div class="entry-content">
                @Html.Raw(Model.EntryContent)
            </div>
            <div class="article-side clearfix">
                
            </div>
            <div class="article-body">
                @Html.Raw(Model.Body) 
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>

